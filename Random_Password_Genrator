\n","\n","    return password\n","\n","def main():\n","\n","    #Main function to run the password generator\n","\n","    while True:\n","        password = generate_password()\n","\n","        if password:\n","            print(f\"\\nGenerated Password: {password}\")\n","            print(f\"Password Length: {len(password)}\")\n","\n","            alphabets_count = sum(1 for c in password if c.isalpha())\n","            digits_count = sum(1 for c in password if c.isdigit())\n","            special_count = sum(1 for c in password if not c.isalnum())\n","\n","            print(\"\\nPassword Composition:\")\n","            print(f\"Alphabets: {alphabets_count}\")\n","            print(f\"Digits: {digits_count}\")\n","            print(f\"Special Characters: {special_count}\")\n","\n","        while True:\n","            choice = input(\"\\nDo you want to generate another password? (y/n): \").lower().strip()\n","            if choice in ['y', 'yes']:\n","                print()\n","                break\n","            elif choice in ['n', 'no']:\n","                print(\"Thank you for using the Password Generator!\")\n","                return\n","            else:\n","                print(\"Please enter 'y' for yes or 'n' for no.\")\n","\n","if __name__ == \"__main__\":\n","    main()"]}],"metadata":{"colab":{"provenance":[],"toc_visible":true,"authorship_tag":"ABX9TyPatjZGxuQOJlCJS8p4aN11"},"kernelspec":{"display_name":"Python 3","name":"python3"},"language_info":{"name":"python"}},"nbformat":4,"nbformat_minor":0}